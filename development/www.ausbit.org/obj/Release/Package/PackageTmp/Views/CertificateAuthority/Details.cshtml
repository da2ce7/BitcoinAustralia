@model www.ausbit.org.Models.Certificate

@{
    ViewBag.Title = "Certificate Authority : Details";
}
@using www.ausbit.org.Helpers


<h2>Certificate: @Html.DisplayFor(model => model.Thingerprint) </h2>

<fieldset>
    <legend>
            @Html.DisplayFor(model => model.Name)
    </legend>

    <div class="display-label">Level</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Level)
    </div>

    <div class="display-label">Data</div>
    <div class="display-field">
        @Html.NewlineToBr(Model.Data)
    </div>
</fieldset>
<p>
  @*  @Html.ActionLink("Edit", "Edit", new { id=Model.Thingerprint }) |*@
    @Html.ActionLink("Download", "Download", new { id = String.Format("{0}.cer",Model.Thingerprint)}) |
    @Html.ActionLink("Back to List", "Index")
</p>
